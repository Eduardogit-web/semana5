@model CentroRescateAnimales.Models.Animal


@{
    ViewData["Title"] = "Centro de Rescate de Animales";
}

<!-- Hero Section -->
<div class="container-fluid bg-primary text-white py-5 mb-4">
    <div class="container text-center">
        <h1 class="display-4 fw-bold">Bienvenidos al Centro de Rescate</h1>
        <p class="lead">Damos hogar y esperanza a animales necesitados</p>
        <a asp-controller="Animales" asp-action="Index" class="btn btn-light btn-lg mt-3">Ver Animales Disponibles</a>
    </div>
</div>

<!-- Features Section -->
<div class="container py-5">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <!-- Card 1 -->
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-paw display-4 text-primary mb-3"></i>
                    <h5 class="card-title">Adopta</h5>
                    <p class="card-text">Encuentra a tu compañero perfecto entre nuestros animales rescatados.</p>
                    <a asp-controller="Animales" asp-action="Index" class="btn btn-outline-primary">Explorar</a>
                </div>
            </div>
        </div>
        <!-- Card 2 -->
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-heart display-4 text-primary mb-3"></i>
                    <h5 class="card-title">Registra un Animal</h5>
                    <p class="card-text">Agrega nuevos animales al sistema para su cuidado y adopción.</p>
                    <a asp-controller="Animales" asp-action="Create" class="btn btn-outline-primary">Registrar</a>
                </div>
            </div>
        </div>
        <!-- Card 3 -->
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-person-plus display-4 text-primary mb-3"></i>
                    <h5 class="card-title">Gestionar Adoptantes</h5>
                    <p class="card-text">Administra los adoptantes que darán hogar a nuestros animales.</p>
                    <a asp-controller="Adoptantes" asp-action="Index" class="btn btn-outline-primary">Gestionar</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Animales Destacados (Opcional) -->
<div class="container-fluid bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-4">Animales Destacados</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card">
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Animal">
                    <div class="card-body">
                        <h5 class="card-title">Max</h5>
                        <p class="card-text">Perro - 2 años - Disponible</p>
                        <a asp-controller="Animales" asp-action="Index" class="btn btn-primary">Ver Todos</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script>
        $(document).ready(function () {
            $('.card').each(function (i) {
                $(this).delay(i * 200).fadeIn(500);
            });
        });
    </script>
}